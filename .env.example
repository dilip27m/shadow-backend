# Server Configuration
PORT=5000

# Database Configuration
# Get this from MongoDB Atlas: https://cloud.mongodb.com/
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGO_URI=your_mongodb_connection_string_here

# Authentication
# Generate a secure random string (32+ characters)
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_a_strong_random_secret_here_min_32_characters

# Environment
NODE_ENV=production

# CORS Configuration
# Set this to your frontend URL in production
# Example: https://shadow.vercel.app or https://yourdomain.com
FRONTEND_URL=http://localhost:3000
